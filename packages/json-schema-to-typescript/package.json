{
  "name": "@fumari/json-schema-to-typescript",
  "version": "2.0.0",
  "description": "compile json schema to typescript typings",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsup",
    "lint": "eslint src/**/*.ts",
    "dev": "tsup --watch"
  },
  "files": [
    "./dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/fuma-nama/json-schema-to-typescript.git"
  },
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./plugins/*": {
      "import": "./dist/plugins/*.js",
      "types": "./dist/plugins/*.d.ts"
    }
  },
  "keywords": [
    "json",
    "schema",
    "typescript",
    "compile",
    "transpile",
    "api",
    "interface",
    "typing",
    "share"
  ],
  "author": "Fuma Nama; Boris Cherny",
  "license": "MIT",
  "dependencies": {
    "js-yaml": "^4.1.1"
  },
  "devDependencies": {
    "@apidevtools/json-schema-ref-parser": "^15.2.2",
    "@types/js-yaml": "^4.0.9",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^25.3.2",
    "prettier": "^3.8.1"
  },
  "peerDependencies": {
    "@apidevtools/json-schema-ref-parser": "14.x.x",
    "prettier": "3.x.x"
  },
  "peerDependenciesMeta": {
    "prettier": {
      "optional": true
    },
    "@apidevtools/json-schema-ref-parser": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
