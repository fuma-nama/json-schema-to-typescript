{
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "composite": false,
    "allowJs": true,
    "declaration": false,
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "Bundler",
    "strictNullChecks": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext"
  },
  "exclude": ["node_modules", "dist"]
}
